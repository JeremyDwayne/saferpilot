<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <%= render @element %>

    <%= link_to "Edit this element", edit_element_path(@element), class: "button" %>
    <%= link_to "Back to elements", elements_path, class: "button" %>
    <div class="inline-block">
      <%= button_to "Destroy this element", @element, method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-red-100 font-medium" %>
    </div>
  </div>
</div>
