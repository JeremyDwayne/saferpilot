<div class="w-full">
  <% content_for :title, "Elements" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Elements</h1>
    <%= link_to "New element", new_element_path, class: "rounded-lg py-3 px-5 bg-green-600 text-white block font-medium" %>
  </div>

  <div id="elements" class="min-w-full">
    <% @elements.each do |element| %>
      <%= render element %>
      <p>
        <%= link_to "Show this element", element, class: "rounded-lg py-3 px-5 primary inline-block font-medium" %>
      </p>
    <% end %>
  </div>
</div>
